<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3">
      <% @restaurants.each do |restaurant|%>
        <h1><%= link_to restaurant.name, restaurant_path(restaurant)%></h1  >
        <h2><%= restaurant.address %><h2>
        <h3><%= restaurant.phone_number %></h3>
        <h3><%= restaurant.category %></h3>
        <%= link_to "Add a new restaurant | ", new_restaurant_path %>
        <%= link_to "Add a new review | ", new_restaurant_review_path(restaurant) %>
        <%= link_to "Destroy | ", restaurant_path(restaurant), method: :delete %>
      <%end%>
    </div>
  </div>
</div>


